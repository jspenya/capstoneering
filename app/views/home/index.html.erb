<header>
	<!-- flag{this_was_pretty_easy} -->
  <div class="container">
    <a href="/" style='text-decoration:none!important;font-size:1.6rem;' class="logo"><i class="fas fa-heartbeat"></i><span style="color:#0188DF;">  W</span>EB<span style="color:#0188DF;">D</span>ASS</a>

    <nav class="nav">
      <ul>
        <li>
        <%= link_to root_path, style:'text-decoration:none!important;font-size:1.1rem;' do %>
          Home
        <% end %>
        </li>
        <li><a style='text-decoration:none!important;font-size:1.1rem;'href="#about">About</a></li>
        <% if user_signed_in? %>
          <li>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, style:'text-decoration:none!important;font-size:1.1rem;' %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Sign In', new_user_session_path, style:'text-decoration:none!important;font-size:1.1rem;' %>
          </li>
          <li>
            <%= link_to 'Sign Up', new_user_registration_path, style:'text-decoration:none!important;font-size:1.1rem;' %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class="fas fa-bars"></div>
  </div>
</header>
<section class="home container" id="home">
	<div class="container-flex">
		<div class="row min-vh-100 align-items-center text-center text-md-left">
			<div class="col-md-6 pr-md-5" data-aos="zoom-in">
					<%= image_tag 'home-img.svg' %>
			</div>
			<div class="col-md-6 pl-md-5 content text-left" data-aos="fade-left">
        <div style="margin-left:2rem;">
          <h1><span style="color:#0188DF;">Need an appointment?</span></h1>
          <h6>Book appointments with your favorite doctor in just a few clicks!</h6>
          <%= link_to new_appointment_path do  %>
            <button class="button" style="width:100%;background-color:#0188DF;"><b>BOOK NOW</b></button>
          <% end %>
        </div>
			</div>
		</div>
	</div>
</section>
<!-- Start of about section -->
<section class="about" id="about">
	<h1 class="heading">
		<span>We offer the following cardiology services:</span>
	</h1>
	<div class="container">
		<div class="row min-vh-100 align-items-center">
			<div class="col-md-6 content" data-aos="fade-right">
				<div class="box">
					<h3> <i class="fas fa-user-md"></i> General Cardiology Consultations </h3>
					<p>Seek consultation with your Cardiologist.</p>
				</div>
				<div class="box">
					<h3>
						<i class="fas fa-stethoscope"></i>
						Stress Testing
					</h3>
					<p>
						Let your doctor check your heart's health.
					</p>
				</div>
				<div class="box">
					<h3> <i class="fas fa-heartbeat"></i> Cardiac Rehabilitation </h3>
					<p>We get to the heart to help you.</p>
				</div>
				<div class="box">
					<h3>
						<i class="fas fa-file-medical-alt"></i> Echocardiography
					</h3>
					<p>
						Let us check if your heart is working right.
					</p>
				</div>
			</div>
			<div class="col-md-6 d-none d-md-block" data-aos="fade-left">
        <%= image_tag 'about-img.png', style:'width:100%;' %>
			</div>
		</div>
	</div>
</section>
<!-- End of about section -->

