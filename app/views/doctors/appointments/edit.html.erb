<div class="container">
  <div class="row mb-3">
    <div class="col-md-12">
      <div class="row">
        <div class="col">
          <div class="card shadow mb-3">
            <div class="card-header py-3">
              <div class="row">
                <div class="col-sm-4 col-xl-7">
                  <p class="text-primary m-0 font-weight-bold" style="margin-top:0.5rem!important;"><%= @appointment.user.fullname %>'s Appointment on <%= @appointment.schedule.strftime("%B %d, %A")%> at <%= @appointment.schedule.strftime("%I:%M %p")%></p>
                </div>
              </div>                   
            </div>
            <div class="card-body">
              <div class="container">
                <div class="row mb-3">
                  <div class="col-md-12">
                      <div class="row">
                        <div class="col">
                          <div class="card shadow mb-3">
                            <div class="card-body">
                              <div class="card-body">
                                <div class="col-md-12 search-table-col">
                                  <%= form_with(model: @appointment, url: reschedule_appointment_doctor_appointment_path, method: :post) do |form| %>
                                    <div class="form-row">
                                      <div class="col-12 col-xl-12">
                                        <label for="schedule">
                                          <strong>
                                            Reschedule
                                            <i>
                                              (Clinic Name, Time & Date)
                                            </i>
                                          </strong>
                                        </label>
                                        <div>
                                          <%= form.autocomplete_field :appointment_schedule, autocomplete_schedule_doctor_path, :id_element => "#appointment_schedule", placeholder: "Typing 'cu mon 9 am ap 4' searches for 'CUMC Monday 9:00 AM April 4 2022'" %>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="form-group" style="margin-top:1.5rem;">
                                      <%= form.submit 'Submit', class:'btn btn-primary btn-sm' %>
                                    </div>
                                  <% end %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
