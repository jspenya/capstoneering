<div style="display:flex;">
<%= render 'layouts/sidebar' %>
  <div class="d-flex flex-column" id="content-wrapper"  style="background-color:#f8f9fc;width:100%;overflow-x:hidden;">
    <div id="content">
    <%= render 'navbar' %>
    <div class="container-fluid">
      <h3 class="text-dark mb-4">All clinics</h3>
      <div class="card shadow">
        <div class="card-header py-3">
          <p class="text-primary m-0 font-weight-bold">clinics list</p>
        </div>
        <div class="card-body">
          <div class="col-md-12 search-table-col">
            <div class="form-group pull-right col-xl-12">
              <div class="row">
                <div class="col-sm-4 col-xl-3">
                  <button class="btn btn-primary btn-block" type="button" data-toggle="modal" data-target="#add-clinic-modal">
                    <strong>Add new clinic</strong>
                  </button>
                </div>
                <div class="col-sm-4 col-xl-3 offset-xl-6">
                  <input class="form-control-sm search form-control" type="text" placeholder="Search by typing here..">
                </div>
              </div>
            </div>
            <div class="table-responsive table results clinic_list text-nowrap">
              <table class="table">
                <thead>
                  <tr>
                    <th class="text-nowrap" id="trs-hd">Clinic Name</th>
                    <th class="text-nowrap" id="trs-hd">Room Number</th>
                    <th class="text-center" id="trs-hd">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @clinics.each do |clinic| %>
                    <tr class="text-nowrap">
                      <td class="text-nowrap"><%= clinic.name %></td>
                      <td class="text-nowrap"><%= clinic.room_number %></td>
                      <td class="text-center">
                        <%= link_to clinic_clinic_schedules_path(clinic), class:"btn btn-success action-btn", role:"button" do %>
                          <i class="fa fa-calendar"></i>
                        <% end %>
                        <button class="btn btn-warning action-btn" type="button" data-toggle="modal" data-target="#edit-clinic-modal">
                          <i class="far fa-edit"></i>
                        </button>
                        <%= link_to doctor_destroy_clinic_path(clinic), method: :post, data: { confirm: "Are you sure you want to delete this clinc?" }, class:"btn btn-danger action-btn" do %>
                          <i class="fa fa-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<div>
<%= simple_form_for(@clinic, url: clinics_path, method: :post) do |form| %>
	<div class="modal fade" role="dialog" tabindex="-1" id="add-clinic-modal">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">
						<strong>Add new Clinic</strong>
					</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">Ã—</span>
					</button>
				</div>
				<div class="modal-body">
          <div class="form-row">
            <div class="col-xl-12">
              <div class="form-group">
                <label>
                  <strong>
                    Clinic name
                  </strong>
                </label>
                <%= form.input :name %>
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="col-xl-6">
              <div class="form-group">
                <label>
                  <strong>
                    Appointment Duration (minutes)
                  </strong>
                </label>
                <%= form.number_field :appointment_duration %>
              </div>
            </div>
            <div class="col-xl-6">
              <div class="form-group">
                <%= form.input :room_number%>
                <%= form.hidden_field :user_id, value: current_user.id %>
              </div>
            </div>
          </div>
				</div>
				<div class="modal-footer text-right">
					<button class="btn btn-warning" type="button" data-dismiss="modal">
						<strong>Close</strong>
					</button>
					<%= form.submit %>
				</div>
			</div>
		</div>
	</div>
<% end %>
