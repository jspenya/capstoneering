<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 card shadow">
      <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">Edit User Details</p>
      </div>
      <div class="card-body">
        <% if @user.facebook_key %>
          Facebook Key: <%= @user.facebook_key %>
        <% end %>
        <%= form_with(model: @user) do |form| %>
          <div style="padding: 2em 1em;">
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @user.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group row" >
              <div class="field" style="display:flex;">
                <%= form.label :email, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.text_field :email, class:"form-control", required: true  %>
                </div>
              </div>
            </div>
            <div class="form-group row" >
              <div class="field" style="display:flex;">
                <%= form.label :mobile_number, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.text_field :mobile_number, class:"form-control", required: true  %>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="field" style="display:flex;">
                <%= form.label :firstname, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.text_field :firstname, class:"form-control", required: true  %>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="field" style="display:flex;">
                <%= form.label :lastname, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.text_field :lastname, class:"form-control", required: true  %>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="field" style="display:flex;">
                <%= form.label :birthdate, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.date_field :birthdate, class:"form-control"%>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="field" style="display:flex;">
                <%= form.label :password, class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.password_field :password, class:'form-control', placeholder: 'Leave blank to not change · changing password requires re-login', style:'width:100%;padding:0 1em;' %>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="field" style="display:flex;">
                <%= form.label 'Confirm Password', class:"col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.password_field :password_confirmation, class:'form-control', placeholder: 'Leave blank to not change · changing password requires re-login', style:'width:100%;padding:0 1em;' %>
                </div>
              </div>
            </div>
            <% if current_user.doctor? %>
              <div class="form-group row">
                <div class="field" style="display:flex;">
                  <%= form.label 'Clinic Notification Buffer', class:"col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= form.number_field :doctor_clinic_notification_time_buffer, class:"form-control" %>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="form-group row">
              <div class="field" style="display:flex;">
                <div></div>
                <div class="col-sm-12">
                  <%= form.submit 'Update', style:"width:100%;margin-top:2rem;" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
